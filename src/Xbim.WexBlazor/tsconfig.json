{
  "compilerOptions": {
    "target": "ES2015",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@xbim/viewer": [
        "wwwroot/lib/xbim-viewer/index"
      ]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["DOM", "ES2015", "ES2016", "ES2017"],
    "outDir": "wwwroot/js",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "wwwroot/lib/xbim-viewer"
    ]
  },
  "include": ["wwwroot/ts"],
} 