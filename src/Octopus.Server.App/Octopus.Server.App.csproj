<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Octopus.Server.App</RootNamespace>
    <AssemblyName>Octopus.Server.App</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="9.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="9.0.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="7.2.0" />
    <!-- xBIM packages for IFC to WexBIM conversion -->
    <PackageReference Include="Xbim.Essentials" Version="6.0.563" />
    <PackageReference Include="Xbim.Geometry.Engine.Interop" Version="6.3.873-netcore" />
    <PackageReference Include="Xbim.ModelGeometry.Scene" Version="6.3.873-netcore" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Octopus.ServiceDefaults\Octopus.ServiceDefaults.csproj" />
    <ProjectReference Include="..\Octopus.Server.Persistence.EfCore\Octopus.Server.Persistence.EfCore.csproj" />
    <ProjectReference Include="..\Octopus.Server.Abstractions\Octopus.Server.Abstractions.csproj" />
    <ProjectReference Include="..\Octopus.Server.Domain\Octopus.Server.Domain.csproj" />
    <ProjectReference Include="..\Octopus.Server.Contracts\Octopus.Server.Contracts.csproj" />
    <ProjectReference Include="..\Octopus.Server.Storage.AzureBlob\Octopus.Server.Storage.AzureBlob.csproj" />
    <ProjectReference Include="..\Octopus.Server.Storage.LocalDisk\Octopus.Server.Storage.LocalDisk.csproj" />
    <ProjectReference Include="..\Octopus.Server.Processing\Octopus.Server.Processing.csproj" />
  </ItemGroup>

</Project>
