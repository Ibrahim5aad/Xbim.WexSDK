@page "/workspaces"
@inject IWorkspacesService WorkspacesService
@inject NavigationManager Navigation

<PageTitle>Workspaces</PageTitle>

<div class="page-header">
    <h1>Workspaces</h1>
    <p>Organize your BIM projects into separate workspaces.</p>
</div>

<!-- Create New Workspace -->
<div class="section-card">
    <h3 class="section-title">
        <i class="bi bi-plus-circle"></i>
        Create New Workspace
    </h3>
    <EditForm Model="@newWorkspace" OnValidSubmit="CreateWorkspace">
        <DataAnnotationsValidator />
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Name</label>
                <InputText class="form-control" @bind-Value="newWorkspace.Name" placeholder="Workspace name" />
                <ValidationMessage For="@(() => newWorkspace.Name)" />
            </div>
            <div class="col-md-5">
                <label class="form-label">Description</label>
                <InputText class="form-control" @bind-Value="newWorkspace.Description" placeholder="Optional description" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100" disabled="@creating">
                    @if (creating)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    }
                    <i class="bi bi-plus-circle"></i>
                    Create Workspace
                </button>
            </div>
        </div>
    </EditForm>
    @if (createError != null)
    {
        <div class="alert alert-danger mt-3">@createError</div>
    }
</div>

<!-- Workspaces Grid -->
@if (loading)
{
    <div class="loading-state">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (loadError != null)
{
    <div class="alert alert-warning">@loadError</div>
}
else if (workspaces == null || !workspaces.Any())
{
    <div class="empty-state">
        <div class="empty-icon">
            <i class="bi bi-collection"></i>
        </div>
        <h3>No workspaces yet</h3>
        <p>Create your first workspace above to get started.</p>
    </div>
}
else
{
    <div class="dashboard-grid">
        @foreach (var ws in workspaces)
        {
            <div class="item-card">
                <div class="item-icon">
                    <i class="bi bi-collection"></i>
                </div>
                <h3 class="item-title">@ws.Name</h3>
                <p class="item-description">@(string.IsNullOrEmpty(ws.Description) ? "No description provided." : ws.Description)</p>
                <div class="item-meta">
                    <span>
                        <i class="bi bi-calendar"></i>
                        @(ws.CreatedAt?.LocalDateTime.ToString("MMM d, yyyy") ?? "-")
                    </span>
                </div>
                <div class="item-actions">
                    <a href="@($"projects?workspaceId={ws.Id}")" class="btn btn-primary flex-1">
                        <i class="bi bi-folder"></i>
                        Open Projects
                    </a>
                </div>
            </div>
        }
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <button class="page-link" @onclick="() => LoadPageAsync(currentPage - 1)">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    var pageNum = i;
                    <li class="page-item @(currentPage == pageNum ? "active" : "")">
                        <button class="page-link" @onclick="() => LoadPageAsync(pageNum)">@pageNum</button>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <button class="page-link" @onclick="() => LoadPageAsync(currentPage + 1)">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </li>
            </ul>
        </nav>
    }
}

@code {
    private List<WorkspaceDto>? workspaces;
    private bool loading = true;
    private string? loadError;
    private int currentPage = 1;
    private int totalPages = 1;
    private const int PageSize = 12;

    private CreateWorkspaceRequest newWorkspace = new();
    private bool creating = false;
    private string? createError;

    protected override async Task OnInitializedAsync()
    {
        await LoadPageAsync(1);
    }

    private async Task LoadPageAsync(int targetPage)
    {
        if (targetPage < 1 || (targetPage > totalPages && totalPages > 0)) return;

        loading = true;
        loadError = null;

        try
        {
            var result = await WorkspacesService.ListAsync(targetPage, PageSize);
            workspaces = result.Items?.ToList() ?? new List<WorkspaceDto>();
            currentPage = result.Page ?? 1;
            totalPages = (int)Math.Ceiling((double)(result.TotalCount ?? 0) / PageSize);
        }
        catch (Exception ex)
        {
            loadError = $"Failed to load workspaces: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task CreateWorkspace()
    {
        if (string.IsNullOrWhiteSpace(newWorkspace.Name)) return;

        creating = true;
        createError = null;

        try
        {
            await WorkspacesService.CreateAsync(newWorkspace);
            newWorkspace = new CreateWorkspaceRequest();
            await LoadPageAsync(1);
        }
        catch (Exception ex)
        {
            createError = $"Failed to create workspace: {ex.Message}";
        }
        finally
        {
            creating = false;
        }
    }
}
